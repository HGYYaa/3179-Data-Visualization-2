{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {"stroke":"black"},
    "width":560,
    "height":300,
    "data": {
      "url": "https://raw.githubusercontent.com/HGYYaa/3179-Project2/main/data/YY_cleaned_dataset.csv"
    },
    "transform": [
      {"filter": "datum.num_alcohol_impaired_driving_deaths > 1432"},
      {"filter": "datum.num_deaths > 1000"}
    ],
    "layer": [
      {
        "params": [
          {
            "name": "highlight",
            "select": {"type": "point","on": "mouseover"}
          },
          {
            "name": "select",
            "select": "point"
          }
        ],
        "mark": {"type": "bar","size":10,"stroke":"white "},
        "encoding": {
          "y": {"field": "state", "type": "ordinal", "title": "State","sort":"-x",
          "axis":{
            "titleColor":"white",
            "titleFontSize":16,
            "labelColor":"white",
            "labelFontSize":14
          }},
          "x": {
            "aggregate": "sum",
            "field": "percent_vaccinated",
            "title": "Number of People Vaccinated",
            "axis":{
              "titleColor":"white",
              "titleFontSize":16,
              "labelColor":"white",
              "labelFontSize":14,
              "grid": false
            }
          },
          "fillOpacity": {
            "condition": {
              "param": "select",
              "value": 1
            },
            "value": 0.3
          },
          "strokeWidth": {
            "condition": [
              {
                "param": "select",
                "empty": false,
                "value": 1
              },
              {
                "param": "highlight",
                "empty": false,
                "value": 1
              }
            ],
            "value": 0
          },
          "tooltip":[
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "percent_vaccinated", "type": "quantitative", "title": "Number of People Vaccinated"}
          ],
          "color":{"field":"state","legend":null}
        }
      },
      {
        "mark": {"type": "point", "size": 300,"color": "#3CB371","filled": true},
        "encoding": {
            "y": {"field": "state", "type": "ordinal", "title": "State", "sort":"-x"},
            "x": {
              "aggregate": "sum",
              "field": "percent_vaccinated",
              "title": "Number of People Vaccinated"
            },
            "tooltip":[
              {"field": "state", "type": "nominal", "title": "State"},
              {"field": "percent_vaccinated", "type": "quantitative", "title": "Number of People Vaccinated"}
            ],
            "color":{"field":"state"}
          }
      }
    ],
    "background":"black"
}