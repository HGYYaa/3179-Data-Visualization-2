{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {"stroke":"black"},
    "width":560,
    "height":300,
    "data": {
      "url": "https://raw.githubusercontent.com/HGYYaa/3179-Project2/main/data/YY_cleaned_dataset.csv"
    },
    "transform": [
      {"filter": "datum.num_alcohol_impaired_driving_deaths > 1432"},
      {"filter": "datum.num_deaths > 1000"}
    ],
    "layer": [
      {
        "mark": {"type": "bar","size":10},
        "encoding": {
          "y": {"field": "state", "type": "ordinal", "title": "State","sort":"-x",
        "axis":{
          "titleColor":"white",
          "titleFontSize":16,
          "labelColor":"white",
          "labelFontSize":14
        }},
          "x": {
            "aggregate": "sum",
            "field": "num_deaths",
            "title": "Number of Deaths",
            "axis":{
              "titleColor":"white",
              "titleFontSize":16,
              "labelColor":"white",
              "labelFontSize":14,
              "grid": false
            }
          },
          "tooltip":[
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "num_deaths", "type": "quantitative", "title": "Number of Deaths"}
          ],
          "color":{"field":"state",
          "legend":null}
        }
      },
      {
        "mark": {"type": "point", "size": 300,"color": "#3CB371","filled": true},
        "encoding": {
            "y": {"field": "state", "type": "ordinal", "title": "State", "sort":"-x"},
            "x": {
              "aggregate": "sum",
              "field": "num_deaths",
              "title": "Number of Deaths"
            },
            "tooltip":[
              {"field": "state", "type": "nominal", "title": "State"},
              {"field": "num_deaths", "type": "quantitative", "title": "Number of Deaths"}
            ],
            "color":{"field":"state"}
          }
      }
    ],
    "background":"black"
}