{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {"stroke":"black"},
    "title":"Drinking",
    "config": {
      "title": {
        "color":"white",
        "fontSize":20
      }
    },
    "width":500,
    "height":300,
    "data": {
      "url": "https://raw.githubusercontent.com/HGYYaa/3179-Project2/main/data/YY_cleaned_dataset.csv"
    },
    "transform": [
      {"filter": "datum.num_alcohol_impaired_driving_deaths > 1432"},
      {"filter": "datum.num_deaths > 1000"},
      {
        "calculate": "datum.num_alcohol_impaired_driving_deaths/datum.num_deaths",
        "as": "percentage"
      }
    ],
    "encoding": {
      "y":{
        "field":"state",
        "type":"nominal"
      },
      "x": {
        "field":"num_deaths",
        "type":"quantitative"
      }
    },
    "layer": [
      {
        "params": [
          {
            "name": "highlight",
            "select": {"type": "point","on": "mouseover"}
          },
          {
            "name": "select",
            "select": "point"
          }
        ],
        "mark": {"type": "bar","color": "#7B68EE", "size":18},
        "encoding": {
          "y": {"field": "state", "type": "ordinal", "sort": "-x","title":"State",
          "axis":{
            "titleColor":"white",
            "titleFontSize":16,
            "labelColor":"white",
            "labelFontSize":14
          }},
          "x": {
            "aggregate": "sum",
            "field": "num_alcohol_impaired_driving_deaths",
            "title": "Number of Death",
            "axis":{
              "titleColor":"white",
              "titleFontSize":16,
              "labelColor":"white",
              "labelFontSize":14
            }
          },
          "fillOpacity": {
            "condition": {
              "param": "select",
              "value": 1
            },
            "value": 0.3
          },
          "strokeWidth": {
            "condition": [
              {
                "param": "select",
                "empty": false,
                "value": 2
              },
              {
                "param": "highlight",
                "empty": false,
                "value": 1
              }
            ],
            "value": 0
          },
          "tooltip":[
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "num_deaths", "type": "quantitative", "title": "Covid Death"},
            {"field": "num_alcohol_impaired_driving_deaths", "type": "quantitative", "title": "Drinking Death"}
          ]
        }
      },
      {
        "params": [
          {
            "name": "highlight_sec",
            "select": {
              "type": "point",
              "on": "mouseover"
            }
          },
          {
            "name": "select2",
            "select": "point"
          }
        ],
        "mark": {"type": "bar", "size": 6,"color": "#FFB6C1"},
        "encoding": {
          "y": {"field": "state", "type": "ordinal", "sort": "-x"},
          "x": {"aggregate": "sum", 
          "field": "num_deaths", 
          "scale":{
            "zero": false, "type": "log"
          },
        "axis":{
            "grid": false,
            "tickCount": 3
        }},
        "fillOpacity": {
          "condition": {
            "param": "select",
            "value": 1
          },
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select2",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight_sec",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
            "tooltip":[
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "num_deaths", "type": "quantitative", "title": "Covid Death"},
            {"field": "num_alcohol_impaired_driving_deaths", "type": "quantitative", "title": "Drinking Death"}
          ]
        }
      },
      {
        "mark":{
          "type": "text",
          "align":"right",
          "baseline":"middle",
          "dx":40,
          "color":"white"
        },
        "encoding": {
          "text":{
            "field":"percentage",
            "type": "quantitative",
            "format":".2%"
          }
        }
      }
    ],
    "background":"black"
}